mixin item(img, title, descr)
    .content_item
        .content_item_img
            img(src="./img/icons/" + img + ".svg", alt=title)
        .content_item_content
            h3.content_item_header
                =title
            .content_item_descr
                if typeof descr === 'object'
                    ul
                        each val in descr
                            li=val                    
                else
                    =descr

section#family.content(data-magellan-target="family")
    .content_part.content_part--family.content_part--left.content_part--green
        .content_block
            .owl-carousel.content_slider
                .content_item_outer
                    +item('dryness', 'Сухость', 'На 2-3 день жизни кожа малыша становится сухой, чаще всего шелушится кожа ладошек и пяточек')
                    +item('pimples', 'Прыщики', 'Когд организм малыша начинает вырабатывать собственные гормоны, на коже могут появиться красные прыщики')
                .content_item_outer
                    +item('intertrigo', 'Опрелости', 'У малышей постарше могут возникать воспаления чувствительных участков кожи')
                    +item('subcooling', 'Переохлаждение', 'На коже малыша появляется «мраморный» рисунок')
    .content_part.content_part--right.content_part--blue(data-sticky-container)
        .content_block.sticky(data-sticky data-anchor="family" data-margin-top="6.2")
            h2.content_block_header
                | Семья и материнство, уход за ребенком
            .content_block_descr
                | Новорожденные — самые нежные цветы жизни. С легкостью избегаем недетских проблем с детской кожей и показываем малышу любовь через прикосновения!

